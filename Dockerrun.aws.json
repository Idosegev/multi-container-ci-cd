{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "idosegev/react-multi-container-app-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name" : "worker",
            "image": "idosegev/react-multi-container-app-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "idosegev/react-multi-container-app-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "idosegev/react-multi-container-app-server",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links" : ["client","server"],
            "memory": 128


        }
    ]
}